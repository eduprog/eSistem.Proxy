{
  "Urls": "http://*:80;https://*:443",
  "LettuceEncrypt": {
    // Set this to automatically accept the terms of service of your certificate authority.
    // If you don't set this in config, you will need to press "y" whenever the application starts
    "AcceptTermsOfService": true,

    // You must specify at least one domain name
    "DomainNames": [ "api.esistem.com.br" ],

    // You must specify an email address to register with the certificate authority
    "EmailAddress": "devel@esistem.com.br"
  },
  "RouteSettingsEsistem": {
    "Modules": [
      {
        "ModuleEsistem": {
          "AppModuleId": "app_cadastro",
          "Description": "Módulo de cadastro do eSistem. Pessoas, Categorias, etc."
        },
        "AppRouteModulesEsistem": [
          {
            "Path": "cadastro/categoria/incluir"
          },
          {
            "Path": "cadastro/categoria/atualizar"
          }
        ]
      },
      {
        "ModuleEsistem": {
          "AppModuleId": "app_categorias",
          "Description": "Módulo de categorias do eSistem."
        },
        "AppRouteModulesEsistem": [
          {
            "Path": "cadastro/categoria/incluir"
          },
          {
            "Path": "cadastro/categoria/atualizar"
          }
        ]
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identitydoc": {
        "ClusterId": "identitydoc",
        "Match": {
          "Path": "/doc"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/doc"
          }
        ]
      },
      "Identity": {
        "ClusterId": "identity",
        "Match": {
          "Path": "/identity/{**catchall}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/identity"
          }
        ]
      },
      "records": {
        "ClusterId": "records",
        "Match": {
          "Path": "/records/{**catchall}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/records"
          }
        ]
      },
      "basicrecords": {
        "ClusterId": "basicrecords",
        "Match": {
          "Path": "/basicrecords/{**catchall}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/basicrecords"
          }
        ]
      }
    },
    "Clusters": {
      "Identity": {
        "Destinations": {
          "destination1": {
            "Address": "https://api.esistem.com.br:5100/api"
          }
        }
      },
      "records": {
        "Destinations": {
          "destination1": {
            "Address": "https://api.esistem.com.br:5120/api"
          }
        }
      },
      "basicrecords": {
        "Destinations": {
          "destination1": {
            "Address": "https://api.esistem.com.br:5110/api"
          }
        }
      },
      "identitydoc": {
        "Destinations": {
          "destination1": {
            "Address": "https://api.esistem.com.br:444"
          }
        }
      }
    }
  }
}
